{# Understanding the Shift - Nuanced Analysis #}
<section class="chapter" id="chapter-factors">
  <div class="chapter__inner">
    <div class="chapter__content chapter__content--center reveal">
      <span class="eyebrow">The Full Picture</span>
      <h2 class="headline-section">{{ realignmentFactors.headline }}</h2>
      <p class="subheadline">{{ realignmentFactors.introduction }}</p>
    </div>
    <div class="chapter__content chapter__content--wide reveal">
      <div class="factors-grid">
        {% for factor in realignmentFactors.factors %}
        <article class="factor-card{% if factor.isPrimary %} factor-card--primary{% endif %}">
          <header class="factor-card__header">
            <h3 class="factor-card__name">{{ factor.name }}</h3>
            <span class="factor-card__role{% if factor.isPrimary %} factor-card__role--primary{% endif %}">{{ factor.role }}</span>
          </header>
          <p class="factor-card__description">{{ factor.description }}</p>
          <p class="factor-card__evidence"><strong>The evidence:</strong> {{ factor.evidence }}</p>
        </article>
        {% endfor %}
      </div>
    </div>
    <div class="chapter__content chapter__content--center reveal">
      <div class="why-primary">
        <h3 class="headline-section" style="font-size: 1.5rem;">{{ realignmentFactors.whyRaceWasPrimary.headline }}</h3>
        <div class="why-primary__points">
          {% for item in realignmentFactors.whyRaceWasPrimary.points %}
          <div class="why-primary__point">
            <strong>{{ item.point }}:</strong> {{ item.detail }}
          </div>
          {% endfor %}
        </div>
        <p class="why-primary__conclusion">{{ realignmentFactors.conclusion }}</p>
      </div>
    </div>
  </div>
</section>

