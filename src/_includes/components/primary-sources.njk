{# Primary Sources Cards #}
<div class="primary-carousel">
  {% for source in primarySources %}
    <article class="primary-card">
      <header>
        <span>{{ source.date }}</span>
        <h3>{{ source.title }}</h3>
      </header>
      <blockquote>
        "{{ source.quote }}"
      </blockquote>
      <footer>{{ source.attribution }}</footer>
      <a href="{{ source.link }}" target="_blank" rel="noopener noreferrer">
        {{ source.linkText }}
      </a>
    </article>
  {% endfor %}
</div>
